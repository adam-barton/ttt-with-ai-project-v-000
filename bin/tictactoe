#!/usr/bin/env ruby

require_relative '../config/environment'

  puts "Welcome to Tic Tac Toe!"
   puts "Press 1 to play against a computer."
   puts "Press 2 to play against another person."
   puts "Press 3 to watch the computer play against itself."


    game = Game.new
      until game.over?
        game.play
      end

      play_again = ""
        until play_again.downcase == "n"
        puts "Would you like to play again? y/n"
        play_again = STDIN.gets.strip
        play_again.downcase == "y"
        next_game = Game.new
          until next_game.over?
            next_game.play
          end
        end
